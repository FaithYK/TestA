<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/teacher_card_view"
        android:layout_width="280px"
        android:layout_height="wrap_content"
        android:clickable="true"
        app:cardCornerRadius="10dp"
        app:cardUseCompatPadding="true"
        app:cardPreventCornerOverlap="false"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp"
        app:cardBackgroundColor="@color/white"
        android:contextClickable="true"
        android:foreground="?android:attr/selectableItemBackground">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/teacher_photo"
                android:layout_width="280px"
                android:layout_height="220px"
                android:layout_gravity="center"
                android:scaleType="centerCrop"
                android:src="@mipmap/ballet_teacher"/>

            <TextView
                android:id="@+id/teacher_tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="芭蕾老师"
                android:layout_marginLeft="16px"
                android:layout_marginTop="15px"
                android:layout_below="@+id/teacher_photo"
                android:textSize="20sp"
                android:textColor="@color/black" />
        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/teacher_tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="从业8年"
        android:layout_toRightOf="@+id/teacher_card_view"
        android:textColor="@color/black"
        android:layout_marginTop="20px"
        android:layout_marginLeft="10px"
        android:layout_marginRight="10px"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/teacher_tv_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="/t/t/t/t终于登上了同一个舞台–第七届中国少儿小金钟音乐大赛全球总决赛。12月23日、24日，第七届中国小金钟迎来收官之战，近50万人通过网络直播见证选手们的风采。
         历时一年，从各个赛区一路走来怀揣音乐梦的他们终于登上了同一个舞台"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:lines="7"
        android:layout_marginTop="10px"
        android:layout_marginLeft="10px"
        android:layout_marginRight="10px"
        android:layout_toRightOf="@+id/teacher_card_view"
        android:ellipsize="end"
        android:layout_below="@+id/teacher_tv_title"/>
</RelativeLayout>